FROM rockyluke/debian:jessie

ENV DEBIAN_FRONTEND noninteractive

RUN apt-get update  -qq && \
    apt-get upgrade -qq -y && \
    apt-get install -qq -y \
      autoconf \
      automake \
      build-essential \
      ed \
      libcap2-dev \
      libkrb5-dev \
      libltdl-dev \
      libsasl2-dev \
      libssl-dev \
      libtool \
      libtool-bin \
      wget && \
    apt-clean

# RUN git clone https://github.com/squid-cache/squid.git /usr/src/squid
RUN curl -Ls -o /tmp/squid-3.5.27.tar.gz 'http://www.squid-cache.org/Versions/v3/3.5/squid-3.5.27.tar.gz' && \
    tar -xzf /tmp/squid-3.5.27.tar.gz -C /usr/src && \
    rm /tmp/squid-3.5.27.tar.gz

RUN cd /usr/src/squid-3.5.27 && \
    ./bootstrap.sh && \
    ./configure \
      --prefix=/usr \
      --libexecdir=${prefix}/lib/squid \
      --sysconfdir=/etc/squid \
      --localstatedir=/var \
      --datadir=${prefix}/share/squid \
      --disable-snmp \
      --disable-ipv6 \
      --with-logdir=/var/log/squid \
      --with-pidfile=/var/run/squid.pid \
      --with-default-user=proxy \
      --with-openssl && \
    make all && \
    make install

EXPOSE 3128

# ENTRYPOINT [ "/usr/bin/node", "/opt/dashkiosk/dist/server.js" ]

# CMD [ "--environment", "production", "--port", "8080" ]
